{
  "name": "@iclinic/axiom",
  "version": "1.0.3",
  "description": "Axiom Design System Tokens",
  "main": "index.js",
  "files": [
    "dist/**",
    "base/**",
    "iclinic/**"
  ],
  "keywords": [
    "axiom",
    "desing token",
    "iclinic",
    "afya digital health"
  ],
  "scripts": {
    "test": "npm test",
    "build": "npm run clean && node ./build.js && npm run transpile",
    "token-transformer": "token-transformer tokens/input.json tokens/output.json --expandShadow=false",
    "clean": "rimraf ./src/build/ ./build ./base ./iclinic",
    "transpile": "npm run ts && npm run copy-files",
    "ts": "npx tsc",
    "copy-files": "copyfiles -u 2 src/build/**/*.scss src/build/**/*.css ./build && copyfiles -u 2 src/base/*.css src/base/*.scss ./base && copyfiles -u 2 src/iclinic/*.css src/iclinic/*.scss ./iclinic"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iclinic/axiom.git"
  },
  "author": "iClinic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iclinic/axiom/issues"
  },
  "homepage": "https://github.com/iclinic/axiom#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "style-dictionary": "^3.7.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "token-transformer": "^0.0.24",
    "webpack": "^5.75.0"
  }
}
